<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/lv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="costTitle"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/lv_item_date"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/lv_item_title"
        android:layout_toEndOf="@id/lv_item_title"
        android:text="costDate"
        android:textSize="10sp"
        android:layout_marginLeft="200dp"
        android:layout_marginStart="200dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"/>

    <TextView
        android:id="@+id/lv_item_cost"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="cost30"
        android:textSize="20sp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"/>


</RelativeLayout>